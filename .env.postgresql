# RequestBin Docker Compose Configuration - PostgreSQL Backend
# Copy this file to .env to use PostgreSQL storage

# Storage Backend
STORAGE_BACKEND=requestbin.storage.postgresql.PostgreSQLStorage

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=requestbin
POSTGRES_USER=requestbin
POSTGRES_PASSWORD=requestbin123
POSTGRES_SCHEMA=requestbin_app

# Application Configuration
MAX_REQUESTS=200
BIN_TTL=345600  # 96 hours in seconds

# Redis settings (not used with PostgreSQL backend, but keeping for compatibility)
REDIS_URL=//redis:6379
