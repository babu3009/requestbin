# RequestBin Docker Compose Configuration - Redis Backend
# Copy this file to .env to use Redis storage

# Storage Backend
STORAGE_BACKEND=requestbin.storage.redis.RedisStorage

# Redis Configuration
REDIS_URL=//redis:6379

# Application Configuration
MAX_REQUESTS=200
BIN_TTL=345600  # 96 hours in seconds

# PostgreSQL settings (not used with Redis backend, but keeping for compatibility)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=requestbin
POSTGRES_USER=requestbin
POSTGRES_PASSWORD=requestbin123
POSTGRES_SCHEMA=requestbin_app
